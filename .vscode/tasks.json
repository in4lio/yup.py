{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yupp: Trace Current File",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pp",          // yupp
                "-q",          // quiet
                "-t2",         // TRACE_STAGE_EVAL
                "--type-file",
                "${file}",
                ">",           // to ".trace" file
                "${file}.trace",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "pkg: Copy Source Files",
            "type": "shell",
            "command": "${workspaceFolder}/script/pkg-cp.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "pkg: Create Dist",
            "type": "shell",
            "command": "${workspaceFolder}/script/pkg-sdist.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}